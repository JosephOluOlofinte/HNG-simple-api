{
  "compilerOptions": {
    
    "target": "ES6",                                   
    "module": "commonJS",                
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "skipLibCheck": true,
    "types": ["node"]  
  },
  "include": ["src/**/*"]
}
